    "keyv-file": "0.1.13",
    "shelljs": "0.8.3",
    "truffle-hdwallet-provider": "1.0.3",
    "yargs": "12.0.5"
  },
  "devDependencies": {
    "@types/cors": "2.8.4",
    "@types/express": "4.16.1",
    "@types/supertest": "2.0.7",
    "@types/yargs": "12.0.8",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "husky": "2.4.0",
    "lint-staged": "8.1.3",
    "mocha": "5.2.0",
    "prettier": "1.16.4",
    "shx": "0.3.2",
    "source-map-support": "0.5.13",
    "supertest": "3.4.2",
    "ts-node": "8.0.2",
    "ts-node-dev": "1.0.0-pre.39",
    "tslint": "5.12.1",
