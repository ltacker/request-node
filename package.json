{
  "name": "request-node",
  "version": "0.5.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "A request-node that uses request-chain-storage instead of ethereum-storage for the storage layer.",
  "keywords": [
    "requestnetwork",
    "request-node"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "dist/server",
  "bin": {
    "request-node": "dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
