    "build:watch": "tsc -b --watch",
    "start": "ts-node src/server.ts",
    "start:watch": "ts-node-dev src/server.ts",
    "clean": "shx rm -rf dist",
  },
  "dependencies": {
    "@requestnetwork/data-access": "0.4.1",
    "@requestnetwork/types": "0.5.0",
    "@requestnetwork/utils": "0.5.0",
