{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "lib": ["es2018"],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["./src/**/*"],
}
